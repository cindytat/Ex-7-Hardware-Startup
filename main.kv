<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'test'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0.54, 0.16, 0.88, 1 #purple
        on_press: root.pressed()

    DPEAButton:
        text: "test2"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 0, 1, 0, 1 #green
        on_press: root.pressed()

    DPEAButton:
        id: on_off_btn
        text: "on" if on_off_btn.state == "normal" else "off"
        size: 100, 100
        x: root.width * 0.50
        y: root.height * 0.5
        color: 0, 0, 255, 1 #blue
        on_press: root.pressed()

    DPEAButton:
        id: btn
        text: ""
        size: 100, 100
        x: root.width * 0.50
        y: root.height * 0.75
        color: 255,0.64,0, 1 #orange
        on_press: root.click()

    DPEAButton:
        id: moto_btn
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.75
        color: 255, 0, 0, 1 #red
        on_press: root.moto_on_off()

    Label:
        id: motor_label
        text: ""
        font_size: 20
        color: 0, 0, 0
        x: root.width * -0.185
        y: root.height * 0.33

    DPEAButton:
        x: root.width * 0.75
        y: root.height * 0.75
        color: 255, 255, 0, 1 #yellow
    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        x: root.width * 0
        y: root.height * -0.45
        sensitivity: "handle"

    Label:
        text: str(slider.value)
        x: root.width * 0.315
        y: root.height * 0.33
        color: 0, 0, 0
    DPEAButton:
        #x: root.width * 0.50
        #y: root.height * 0.25
        #color: 255, 0, 255, 1 #purple

    ImageButton:
        id: cat
        source: 'cat.jpeg'
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.25
        on_press: root.secondscreen()

    ImageButton:
        id: cat2
        source: 'cat2.jpeg'
        size: 100, 100
        x: root.width * 0.50
        y: root.height * 0.25
        on_release: root.animate_button()

