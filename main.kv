<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: stepper_on_off
        text: "Stepper Motor Off"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.75
        color: 255, 0, 0, 1 #red
        on_press: root.stepper_on_off()

    DPEAButton:
        id: changeDirection
        text: "CW"
        size: 100, 100
        x: root.width * 0.50
        y: root.height * 0.75
        color: 255,0.64,0, 1 #orange
        on_press: root.changeDirection()

    DPEAButton:
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.75
        color: 255, 255, 0, 1 #yellow

    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        x: root.width * 0
        y: root.height * -0.45
        sensitivity: "handle"
        on_touch_move: root.slider()

    Label:
        text: str(slider.value)
        x: root.width * 0.315
        y: root.height * 0.33
        color: 0,0,0

    DPEAButton:
        id: getPosition
        text: "getPos"
        size: 100, 100
        x: root.width * 0.25
        y: root.width * 0.35
        color: 0, 1, 0, 1 #green
        on_press: root.update()

    DPEAButton:
        id: servo_cw
        text: "Rotate Servo 0 CW"
        size: 100, 100
        x: root.width * 0.50
        y: root.height * 0.35
        color: 0, 0, 255, 1 #blue
        on_press: root.servo_cw()

    DPEAButton:
        id: servo_ccw
        text: "Rotate Servo 0 CCW"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.35
        color: 0, 0, 255, 1 #blue
        on_press: root.servo_ccw()

